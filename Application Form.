<script>
function validateForm(event){
var firstName = document.getElementById('firstName').value;
var lastName = document.getElementById('lastName').value;
var childage = document.getElementById('childage').value;
var childFirstName = document.getElementById('childFirstName').value;
var childLastName = document.getElementById('childLastName').value;
var schoolName = document.getElementById('schoolName').value;
var streetName1 = document.getElementById('streetName1').value;
var streetName2 = document.getElementById('streetName2').value;
var cityName = document.getElementById('cityName').value;
var region = document.getElementById('region').value;
var zipCode = document.getElementById('zipCode').value;
var phoneNumber = document.getElementById('phoneNumber').value;

if(!firstName || !lastName || !childage|| !childFirstName || !childLastName || !schoolName || !streetName1 || !streetName2 || !cityName || !region || !zipCode || !phoneNumber){
	alert("Please fill the required information.");
	event.preventDefault();
	return false;
}
return true;
}
</script>

